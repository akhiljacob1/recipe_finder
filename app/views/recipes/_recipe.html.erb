<%= link_to recipe_path(recipe, ingredients: @search_query), class: "w-min" do %>
  <div class="bg-white rounded-lg h-full w-64 overflow-hidden hover:shadow-lg transition-shadow duration-200">
    <!-- Recipe Image -->
    <div class="relative h-48 bg-gradient-to-br from-orange-100 to-red-100 flex items-center justify-center">
      <% if recipe.image_url.present? %>
        <%= image_tag recipe.image_url, class: "w-full h-full object-cover", alt: recipe.title %>
      <% else %>
        <div class="text-center text-stone-400">
          <svg class="w-16 h-16 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
          </svg>
          <p class="text-sm">No Image</p>
        </div>
      <% end %>
      
      <!-- Score Display (Development Only) -->
      <% if defined?(@recipe_scores) && @recipe_scores&.key?(recipe.id) %>
        <div class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded text-xs font-bold">
          Score: <%= @recipe_scores[recipe.id] %>
        </div>
      <% end %>
    </div>

    <!-- Recipe Content -->
    <div class="p-4">
      <h3 class="font-semibold text-md text-stone-900 mb-2 line-clamp-2"><%= recipe.title %></h3>
      
      <!-- Tags -->
      <div class="flex justify-between mb-3 text-stone-500">
        <span class="text-sm">
          <%= recipe.category %>
        </span>

        <div class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          
          <span class="text-xs font-medium">
            <%= recipe.total_time %> min
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>