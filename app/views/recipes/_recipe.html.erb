<div class="bg-white rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-200">
  <!-- Recipe Image -->
  <div class="relative h-48 bg-gradient-to-br from-orange-100 to-red-100 flex items-center justify-center">
    <% if recipe.image_url.present? %>
      <%= image_tag recipe.image_url, class: "w-full h-full object-cover", alt: recipe.title %>
    <% else %>
      <div class="text-center text-stone-400">
        <svg class="w-16 h-16 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
        </svg>
        <p class="text-sm">No Image</p>
      </div>
    <% end %>
    
    <!-- New Tag -->
    <div class="absolute top-3 right-3">
      <span class="bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full">New</span>
    </div>
  </div>

  <!-- Recipe Content -->
  <div class="p-4">
    <h3 class="font-bold text-lg text-stone-900 mb-2 line-clamp-2"><%= recipe.title %></h3>
    
    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-3">
      <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2 py-1 rounded-full">
        <%= recipe.category %>
      </span>
      <% if recipe.total_time <= 30 %>
        <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">Quick</span>
      <% end %>
      <span class="bg-orange-100 text-orange-800 text-xs font-medium px-2 py-1 rounded-full">
        <%= recipe.total_time %> min
      </span>
    </div>
    
    <!-- Description -->
    <p class="text-stone-600 text-sm line-clamp-3 mb-4">
      <%= recipe.ingredients.first(4).join(", ") %><%= recipe.ingredients.length > 4 ? "..." : "" %>
    </p>
    
    <!-- Recipe Details -->
    <div class="flex items-center justify-between text-sm text-stone-500">
      <span>‚≠ê <%= recipe.ratings %></span>
      <span>By <%= recipe.author %></span>
    </div>
    
    <!-- View Recipe Link -->
    <div class="mt-4">
      <%= link_to "View Recipe", recipe, class: "block w-full text-center bg-stone-100 text-stone-700 py-2 px-4 rounded-md hover:bg-stone-200 transition-colors duration-200 text-sm font-medium" %>
    </div>
  </div>
</div>
