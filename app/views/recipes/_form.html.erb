<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :cook_time, style: "display: block" %>
    <%= form.number_field :cook_time %>
  </div>

  <div>
    <%= form.label :prep_time, style: "display: block" %>
    <%= form.number_field :prep_time %>
  </div>

  <div>
    <%= form.label :ratings, style: "display: block" %>
    <%= form.text_field :ratings %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :ingredients, style: "display: block" %>
    <%= form.text_area :ingredients, placeholder: "Enter ingredients, one per line", 
                       value: (recipe.ingredients&.join("\n") if recipe.ingredients), 
                       style: "height: 100px;" %>
    <small>Enter each ingredient on a separate line</small>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
